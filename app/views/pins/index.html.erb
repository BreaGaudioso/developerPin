<div class="container-fluid text-center">
<div class="row">
  <h1>DEVPIN</h1>
  <h3>A place for all of your developer helps</h3></br></br>
</div>
  <div class="row">
    <% @pins.each do |pin| %>
    <div class="col-md-3">
      <%=pin.comment%></br>
      <a href="/pins/<%=pin.id%>" ><img src='<%=pin.image%>' width='200px' height='200px'/></a><br/>
      <a href="<%=pin.url%>" target='blank'>Visit </a>  &hearts; <%= link_to 'Delete', pin, method: :delete, data: { confirm: 'Are you sure you want to delete this     Pin?'} %></br></br>
    </div>
    <% end %></br></br>
  </div>
</div>